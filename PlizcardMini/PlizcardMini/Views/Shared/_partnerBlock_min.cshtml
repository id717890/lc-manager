@foreach (var item in Model)
{
<div class="plate plate3">
    <div class="partners-imageholder">
        <a href='/Partners/Details/@item.id'><img src='@item.logo' alt="Партнер" style="width:100%"></a>
    </div>
    <div class="plate-desc">
        <p class="plate-short">@item.condition</p>
        <p class="plate-hero">@item.tagline</p>
        <p></p>
        <div class="plate-bar">
            <div>
                <a href='/Partners/Details/@item.id' data='@item.id'><button type="button" class="btn">Подробнее</button></a>
            </div>
            <div>
                @if (UserSession.user_id > 0)
                {
                    var aclass = (API.isFavPartner(item.id)) ? "star-checked" : "";
                    <div class="star-holder @aclass">
                        <a href="#" data-toggle="tooltip" title="" class="star-half" data-original-title="Добавить в избранное" data='@item.id' dtype="partners"></a>
                        <a href="#" data-toggle="tooltip" title="" class="star-full" data-original-title="Удалить из избранного" data='@item.id' dtype="partners"></a>
                    </div>
                }
                else
                {
                    <div class='star-holder star-unauth'>
                        <a href="#" data-toggle="modal" data-target="#login-modal" class="star-half" dtype="partners"></a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
}

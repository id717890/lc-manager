<!-- Login -->
<div class="modal fade" id="login-modal" tabindex="-1" role="dialog" aria-labelledby="login-modal-header">
    <div class="modal-dialog modal-md" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                <h1 id="login-modal-header" class="modal-title">Авторизация</h1>
            </div>
            <div class="modal-body">
                <form id="logintosite">
                    <div class="form-item">
                        <label for="login-modal-input-user">Номер мобильного телефона или карты</label>
                        <input type="text" id="login-modal-input-user" name="user">
                    </div>

                    <div class="form-item">
                        <div class="form-right-link"><a href="#" data-toggle="modal" data-dismiss="modal" data-target="#remember-modal">Забыли пароль?</a></div>
                        <label for="login-modal-input-password">Пароль</label>
                        <input type="password" id="login-modal-input-password" name="pass">
                    </div>

                    <div class="form-buttons">
                        <div>
                            <a href="#"><button type="submit" name="login" class="btn">Войти</button></a>
                        </div>
                        <div class="social">
                            <input type="hidden" id="login-modal-input-fb" value=""/>
                            <input type="hidden" id="login-modal-input-vk" value="" />
                            <input type="hidden" id="login-modal-input-ok" value="" />
                            Войти через соц. сети<br>
                            <a href="#" id="fb-login"><img src="/gfx/interface/footer-soc-fb.png" alt="Facebook"></a>
                            <a href="#" id="vk-login"><img src="/gfx/interface/footer-soc-vk.png" alt="VKontakte"></a>
                            <a href="#" id="ok-login"><img src="/gfx/interface/footer-soc-ok.png" alt="Одноклассники"></a>
                        </div>
                    </div>

                </form>

            </div>
        </div>
    </div>
</div>


@{ 
        int id_category_filter = 0;
        var category_filter = UserSession.get("ActionCategoryFilter");
        if (category_filter != null)
        {
            id_category_filter = (int)category_filter;
        }

          //  var allcnt = ((List<curCategory>)Model).Sum(em => em.cnt);
    }



@foreach (var item in Model)
{
    if (item.id == -1)
    {

    <div class="map-filter-line">
        <div>
            <a href='#' data='0' class="actions_category_filter" style='@((id_category_filter == 0) ? "" : "")'>Все</a>
        </div>

        <div>
            <a href='#' data='0' class="actions_category_filter"><span class='filter-number @((id_category_filter == 0) ? "filter-number-highlight" : "")'>@item.cnt</span></a>
        </div>

    </div>
    }
    else
    {
<div class="map-filter-line">
    <div>
        <a href='#' data='@item.id' class ="actions_category_filter" style='@((id_category_filter == item.id) ? "" : "")'>@item.name</a>
    </div>
    
    <div>
        <a href='#' data='@item.id' class="actions_category_filter" ><span class='filter-number @((id_category_filter == item.id) ? "filter-number-highlight" : "")'>@item.cnt</span></a>
    </div>
        
</div>
    }
}
